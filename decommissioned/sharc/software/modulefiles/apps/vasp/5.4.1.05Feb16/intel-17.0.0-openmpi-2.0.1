## Module file logging
source /usr/local/etc/module_logging.tcl
##

proc ModulesHelp { } {
        global version

        puts stderr "   Makes VASP Version 5.4.1 available for use"
}

#set USER $::env(USER)

module-whatis   "Makes VASP Version 5.4.1 available"

# load modules
 module load mpi/openmpi/2.0.1/intel-17.0.0
 module load libs/intel-mkl/2017.0/binary

# module variables
#
 set     version 5.4.1.05Feb16
 set     vasproot /usr/local/packages/apps/vasp/$version/intel-17.0.0-openmpi-2.0.1
 setenv  VASP_ROOT $vasproot
 setenv  PSEUDOPOTENTIAL_DIR /usr/local/packages/apps/vasp/POTCAR

 prepend-path PATH $vasproot/vasp.5.4.1/bin
